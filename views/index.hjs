    <script>
        var screen_height = $(window).height();
        var screen_width = $(window).width();
        $('.landing').css({
            'height': screen_height,
            'width': screen_width,
        });

        $('.field input').blur(function() {
            if( $(this).val() !== '' ){
                $(this).siblings('label').addClass('fixed');
            }else {
                $(this).siblings('label').removeClass('fixed');
            }
        });
